{# src/Okeanos/CoreBundle/Resources/views/layout.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Okeanos{% endblock %}</title>
    {% block css %}
        <link rel="stylesheet" href="{{ asset('scripts/css/bootstrap/bootstrap-grid.min.css') }}">
        <link rel="stylesheet" href="{{ asset('scripts/css/bootstrap/bootstrap-reboot.min.css') }}">
        <link rel="stylesheet" href="{{ asset('scripts/css/bootstrap/bootstrap.min.css') }}">
    {% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a href="{{ path('okeanos_core_homepage') }}" class="navbar-brand">OKEANOS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav" style="justify-content: end;">
            <ul class="navbar-nav">
                <li class="nav-item{% block activePageHome %}{% endblock %}"><a href="{{ path('okeanos_core_homepage') }}" class="nav-link">Home</a></li>
                <li class="nav-item{% block activePageNews %}{% endblock %}"><a href="{{ path('okeanos_core_news') }}" class="nav-link">News</a></li>
                <li class="nav-item{% block activePageActions %}{% endblock %}"><a href="{{ path('okeanos_core_actions') }}" class="nav-link">Actions</a></li>
                <li class="nav-item{% block activePageDonate %}{% endblock %}"><a href="{{ path('okeanos_core_donate') }}" class="nav-link">Donate</a></li>
                <li class="nav-item{% block activePageLogin %}{% endblock %}" style="margin-right: .5rem;"><a href="{{ path('okeanos_core_login') }}" class="nav-link">Login</a></li>
            </ul>
        </div>
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </nav>
    <div class="wrapper-main">
        <!-- CONTAINER -->
        {% block container %}
        {% endblock %}
        <!-- /END CONTAINER -->

        <!-- FOOTER -->
        <footer class="footer">
            <p>Okeanos &copy; 2018</p>
            <p>Developed by PALM</p>
        </footer>
        <!-- /END FOOTER -->
    </div>

    <!-- JS SCRIPTS -->
    <script src="{{ asset('scripts/js/bootstrap/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('scripts/js/bootstrap/bootstrap.min.js') }}"></script>
    <!-- /END JS SCRIPTS -->
</body>
</html>