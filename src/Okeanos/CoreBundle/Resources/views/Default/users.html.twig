{# src/Okeanos/CoreBundle/Resources/views/Default/users.html.twig #}
{% extends 'OkeanosCoreBundle::layout.html.twig' %}
{% block title %}Users | {{ parent() }}{% endblock %}
{% block container %}
    <div class="row justify-content-center mt-3">
        <div class="col-sm-1"><h1>Users</h1></div>
        <div class="col-sm-11"><a href="{{ path('okeanos_core_usersAdd') }}" class="btn btn-primary">Add user</a></div>
        <div class="col-sm-12">
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Username</th>
                        <th scope="col">Password</th>
                        <th scope="col">Email</th>
                        <th scope="col">First name</th>
                        <th scope="col">Last name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Country</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.username }}</td>
                            <td>{{ user.password }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.fname }}</td>
                            <td>{{ user.lname }}</td>
                            <td>{{ user.age }}</td>
                            <td>{{ user.country }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}