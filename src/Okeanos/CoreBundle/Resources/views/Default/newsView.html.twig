{# src/Okeanos/CoreBundle/Resources/views/Default/newsView.html.twig #}
{% extends 'OkeanosCoreBundle::layout.html.twig' %}
{% block title %}{{ news.title }} | News | {{ parent() }}{% endblock %}
{% block activePageNews %} active{% endblock %}
{% block container %}
    <div class="news">
        <img src="{{ asset('medias/img/news/' ~ news.img) }}">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-sm-2 date" style="text-align: center; border-right: 1px solid;">
                    <p class="day">
                        {{ news.date|date('d') }}
                    </p>
                    <p>
                        {{ news.date|date('F Y') }}
                    </p>
                </div>
                <div class="col-sm-8">
                    <h1>
                        &#171; {{ news.title }} &#187;
                    </h1>
                    <p>
                        Author : {{ news.user.fname ~ ' ' ~ news.user.lname }}
                    </p>
                    <p>
                        {{ news.descript }}
                    </p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-10">
                    <p>
                        {{ news.content }}
                    </p>
                    <p>
                        {{ news.content }}
                    </p>
                    <p>
                        {{ news.content }}
                    </p>
                </div>
            </div>
            <div class="row justify-content-center text-right">
                <div class="col-sm-10">
                    <p>
                        Published : {{ news.date|date('d F Y') }}
                    </p>
                    <p>
                        Posted by : {{ news.user.fname ~ ' ' ~ news.user.lname }}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}