{# src/Okeanos/CoreBundle/Resources/views/Default/donate.html.twig #}
{% extends 'OkeanosCoreBundle::layout.html.twig' %}
{% block title %}Donate | {{ parent() }}{% endblock %}
{% block activePageDonate %} active{% endblock %}
{% block container %}
    <div class="row justify-content-center mt-3">
        <div class="col-sm-6">
            <h1>Fund an action</h1>
            {{ form_start(form) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}

            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.action, 'Action :') }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.action) }}

                {# Génération de l'input. #}
                {{ form_widget(form.action, {'attr': {'class': 'form-control', 'placeholder': 'Choose an action to fund'}}) }}
            </div>

            <div class="form-group">
                {# Génération du label. #}
                {{ form_label(form.amount, 'Amount :') }}

                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors(form.amount) }}

                {# Génération de l'input. #}
                {{ form_widget(form.amount, {'attr': {'class': 'form-control', 'placeholder': 'Enter an amount'}}) }}
            </div>

            {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget. #}
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

            {# Génération automatique des champs pas encore écrits. Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !) et tous les autres champs cachés (type "hidden"). #}
            {{ form_rest(form) }}

            {# Fermeture de la balise "form" du formulaire HTML. #}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}